<div class="index">
  <p> STOCK LIST </p>
  <table>
    <colgroup span="8"></colgroup>
    <% for product in @products %>
    <tr>
      <th>Name: </th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Buying Cost</th>
      <th>Selling Price</th>
      <th>Date of Order</th>
      <th>Manufacturer</th>
      <th>Category</th>
      <th>For Details</th>
    </tr>
    <tr>
      <td><%= product.name().capitalize() %></td>
      <td><%= product.description().capitalize()%></td>
      <td><%= product.stock_quantity() %></td>
      <td><%= product.buying_cost() %></td>
      <td><%= product.selling_price() %></td>
      <td><%= product.order_date() %></td>
      <td><%= product.manufacturer() %></td>
      <td><%= product.category() %></td>
      <td><a href="/stock-list/<%= product.id %>">Show More</a></td>
    </tr>
    <%end%>
  </table>
</div>
