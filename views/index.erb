<div class="index">
  <p> STOCK LIST </p>
  <table>
    <colgroup span="8"></colgroup>
    <% for product in @producs %>
    <tr>
      <th>Name: <%= product.name() %></th>
    </tr>
  </table>
  <p>Table with colgroup</p>
<table>
  <colgroup span="4"></colgroup>
  <tr>
    <th>Countries</th>
    <th>Capitals</th>
    <th>Population</th>
    <th>Language</th>
  </tr>
  <tr>
    <td>USA</td>
    <td>Washington, D.C.</td>
    <td>309 million</td>
    <td>English</td>
  </tr>
  <tr>
    <td>Sweden</td>
    <td>Stockholm</td>
    <td>9 million</td>
    <td>Swedish</td>
  </tr>
</table>

<div class="details">

  <div class="detailbox">
    <p> Name:  </p>
    <p> Order: <%= order.topping.capitalize %> x <%= order.quantity %></p>
    <a href="/pizza-orders/<%= order.id %>"> Show More </a>
  </div>
  <% end %>
</div>

</div>
