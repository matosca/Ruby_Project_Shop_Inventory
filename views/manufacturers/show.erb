<div class="show">
  <div class="back-arrow">
    <a href="/manufacturers"><img src="https://img.icons8.com/ios/50/000000/left-filled.png"></a>
  </div>
  <div class="showbox">
    <h3><%= @manufacturer.name %></h3>
    <address class="address">
      Country: <%= @manufacturer.country %><br>
      Phone: <%= @manufacturer.phone %><br>
      Email: <%= @manufacturer.email %><br>
    </address>
    <div class="button">
      <form id="button1" action= "/manufacturers/<%=@manufacturer.id%>/edit" method="get">
        <input type="submit" value="Edit">
      </form>

      <form id="button2" action="/manufacturers/<%=@manufacturer.id%>/delete"  method="post">
        <input type="submit"  value="Delete">
      </form>
    </div>
  </div>

  <h2>PRODUCTS SUPPLIED</h2>
  <div class="filtered-list showbox">
    <% array = @manufacturer.products %>
    <% result = array.map { |product|  product.name} %>
    <% products = result.each { |product|  product} %>
    <% for product in products%>
    <ul>
      <li><%= product %></li>
    </ul>
    <% end %>
  </div>


</div>
