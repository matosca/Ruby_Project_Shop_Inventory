<div id="new">
  <h2>EDIT <%="#{@manufacturer.id}:#{@manufacturer.name}"%></h2>

  <div class="form1" id="manufacturer-form">
    <form  ation="/manufacturers/<%=@manufacturer.id%>" method="post">
      <div class="section"> <span>1</span> Manufacturer Name</div>
      <div class="inner-wrap">
        <label for="name">Manufacturer Name: </label>
        <input type="text" name="name" id="name" placeholder="Enter name" value="<%=@manufacturer.name%>">
      </div>

      <div class="section"> <span>2</span> Contact Details</div>
      <div class="inner-wrap">
        <label for="country">Country: </label>
        <input type="text" name="country" id="country" placeholder="Enter country name" value="<%=@manufacturer.country%>">

        <label for="phone">Phone: </label>
        <input type="text" name="phone" id="phone" placeholder="Enter phone number" value="<%=@manufacturer.phone%>">

        <label for="email">Email: </label>
        <input type="email" name="email" id="email" placeholder="Enter email address" value="<%=@manufacturer.email%>">
      </div>

      <div class="button-section">
        <input type="submit" value="Update">
      </div>
    </form>

  </div>
</div>
