<div class="index1">
  <h2> STOCK LIST </h2>

  <div class="table1">
    <table id="product-list">
      <colgroup span="11"></colgroup>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Max/Min Quantity</th>
        <th>Cost per Unit</th>
        <th>Price per Unit</th>
        <th>Margin (%)</th>
        <th>Markup (%)</th>
        <th>Manufacturer</th>
        <th>Category</th>
        <th>Details</th>
      </tr>
      <% for product in @products %>
      <tr>
        <td><%= product.name() %></td>
        <td><%= product.description()%></td>
        <td><%= product.stock_quantity() %></td>
        <td><%= product.max_quantity() %> / <%= product.min_quantity() %></td>
        <td><%= product.buying_cost() %></td>
        <td><%= product.selling_price() %></td>
        <td><%= product.margin().round(2) %></td>
        <td><%= product.markup().round(2) %></td>
        <td><%= product.manufacturer() %></td>
        <td><%= product.category() %></td>
        <td><a href="/inventory/<%= product.id %>">Show</a></td>
      </tr>
      <%end%>
    </table>
  </div>
</div>

<div id="link">
  <a href="/inventory/new">Order</a>
</div>
