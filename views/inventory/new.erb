<div id="new">
  <p> EMPTY ORDER FORM: </p>

  <div class="form">
    <form action="/inventory" method="post">

      <div class="item-name">
        <label for="product-name">Product Name:</label>
        <input type="text" name="name" id="product-name" placeholder="Enter name"/>
      </div>

      <div class="descript-item">
        <label for="description">Description:</label>
        <input type="text" name="description" id="description" placeholder="Enter a description"/>
      </div>

      <div class="quantity">
        <label for="stock-quantity">Quantity:</label>
        <input type="number" name="stock_quantity" value="Minimum Order 10" placeholder="Select quantity">
      </div>

      <div class="cost">
        <label for="buying-cost">Buying Cost</label>
        <input type="number" step="any" name="buying_cost">
      </div>

      <div class="price">
        <label for="selling-price">Selling Price</label>
        <input type="number" name="selling_price" step="any">
      </div>

      <div class="date">
        <label for="date-order">Date of Order</label>
        <input type="date" name="date_order">
      </div>

      <div class="manufacturer-slct">
        <label for="manufacturer">Select Manufacturer:</label>
        <select name="manufacturer_id" id="manufacturer">
        <% for manufacturer in @manufacturers %>
          <option value="<%= manufacturer.id %>"><%= manufacturer.name.capitalize %></option>
           <% end %>
        </select>
      </div>

      <div class="category-slct">
        <label for="category">Select Category:</label>
        <select name="category_id" id="category">
          <% for category in @categories %>
          <option value="<%= category.id %>"> <%= category.type.capitalize%></option>
          <% end %>
        </select>
      </div>

      <input type="submit" value="Request Order">
    </form>
  </div>
</div>




