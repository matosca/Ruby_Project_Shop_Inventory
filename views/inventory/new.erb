<div id="new">
  <h2>ADD NEW STOCK</h2>

  <div class="form1" id="product-form">

    <form action="/inventory" method="post">
      <div class="section"> <span>1</span> Product Name & Description</div>
      <div class="inner-wrap">
        <label for="name">Product Name: </label>
        <input type="text" name="name" id="name" placeholder="Enter name"/>

        <label for="description">Description: </label>
        <input type="text" name="description" id="description" placeholder="Enter a description"/>
      </div>

      <div class="section"> <span>2</span> Stock Quantity & Min/Max Quantity</div>
      <div class="inner-wrap">
        <label for="stock-quantity">Stock Quantity: </label>
        <input type="number" name="stock_quantity" id="stock-quantity" placeholder="Select quantity">

        <label for="max-quantity">Maximum Quantity: </label>
        <input type="number" name="max_quantity" id="max-quantity" placeholder="Select maximum quantity">

        <label for="min-quantity">Minimum Quantity: </label>
        <input type="number" name="min_quantity" id="min-quantity" placeholder="Select minimum quantity">
      </div>

      <div class="section"> <span>3</span> Product Cost & Product Price</div>
      <div class="inner-wrap">
        <label for="buying-cost">Buying Cost: </label>
        <input type="number" name="buying_cost" id="buying-cost" min="0.00" max="10000" step="any">

        <label for="selling-price">Selling Price: </label>
        <input type="number" name="selling_price" id="selling-price" min="0.00" max="10000" step="any">
      </div>

      <div class="section"> <span>4</span> Manufacturer & Category</div>
      <div class="inner-wrap" id="dropdowns">
        <label for="manufacturer">Select Manufacturer: </label>
        <select name="manufacturer_id" id="manufacturer">
          <% for manufacturer in @manufacturers %>
          <option value="<%= manufacturer.id %>"><%= manufacturer.name.capitalize %></option>
           <% end %>
        </select>

        <label for="category">Select Category: </label>
        <select name="category_id" id="category">
          <% for category in @categories %>
          <option value="<%= category.id %>"> <%= category.type.capitalize%></option>
          <% end %>
        </select>
      </div>
      <div class="button-section">
        <input type="submit" value="Add Stock">
      </div>
    </form>
  </div>
</div>




